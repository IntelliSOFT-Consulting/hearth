{
  "name": "hearth",
  "version": "0.1.0",
  "description": "Hearth, a home for FHIR. A fast FHIR-compliant server.",
  "scripts": {
    "start": "node lib/server.js",
    "dev:start": "NODE_ENV='development' npm run start",
    "test": "npm run test:code && npm -s run test:style",
    "test:code": "tap --cov --reporter=spec test/**.js",
    "test:style": "standard -v | snazzy",
    "cov": "npm run test:code -- --coverage-report=lcov",
    "test:upload-cov": "tap --coverage-report=lcov && codecov"
  },
  "dependencies": {
    "async": "^2.1.4",
    "atna-audit": "^1.0.0",
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "express": "^4.14.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "mongodb": "^2.2.22",
    "nconf": "^0.8.4",
    "request": "^2.81.0",
    "stdio": "^0.2.7",
    "urijs": "^1.18.5",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "glossy": "^0.1.7",
    "libxmljs": "^0.18.4",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "tap": "^10.1.0"
  },
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "FHIR",
    "HL7",
    "IHE",
    "server"
  ],
  "author": "Jembi Health Systems NPC",
  "license": "MPL-2.0"
}
